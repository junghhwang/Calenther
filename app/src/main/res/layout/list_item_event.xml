<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/list_item_state">

    <TextView
        android:text="Event time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_time"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/imageView_event"
        android:layout_alignStart="@+id/imageView_event"
        android:layout_marginStart="80dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:id="@+id/imageView_event"
        android:layout_marginStart="17dp"
        android:layout_alignTop="@+id/list_item_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Event name"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:id="@+id/list_item_name"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView_event"
        android:layout_marginStart="13dp" />

</RelativeLayout>